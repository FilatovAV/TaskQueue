@model Issue

@{
    ViewData["Title"] = "Details";
}

<h1>Issue: @Model.Header</h1>

<div>
    <p>Current status:</p>
    <p>@Model.Status.Name</p>
</div>

<div>
    <p>Creation time:</p>
    <p>@Model.CreationDate</p>

    <p>Execution time:</p>
    <p>@Model.ExecutionDate</p>
</div>

<div>
    <p>Content:</p>
    <textarea readonly class="form-control" rows="5">@Model.Content</textarea>
</div>